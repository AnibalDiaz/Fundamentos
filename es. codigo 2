#include <stdio.h>
#include <stdlib.h>

float multiplicacion(float,float);
float division(float,float);
float suma(float,float);
float resta(float,float);

int main(int argc, char** argv) {
    float valor1,valor2;
    
    printf("Dame el primer valor: ");
    scanf("%f",&valor1);
    printf("Dame el segundo valor: ");
    scanf("%f",&valor2);
    
    printf("Rsultado de la multiplicaion es %.2f\n",multiplicacion(valor1,valor2));
    printf("Resultado de la division es %.2f\n",division(valor1,valor2));
    printf("Resultado de la suma es %.2f\n",suma(valor1,valor2));
    printf("Resultado de la division es %.2f",resta(valor1,valor2));
  
    return (EXIT_SUCCESS);
}

float multiplicacion(float valor1,float valor2){
    float M;
    M=valor1*valor2;
    
    return M;
}

float division(float valor1,float valor2){
    float D;
    D=valor1/valor2;
    
    return D;
}

float suma(float valor1,float valor2){
    float S;
    S=valor1+valor2;
    
    return S;
}

float resta(float valor1,float valor2){
    float R;
    R=valor1-valor2;
    return R;
}
